<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.response.buffer.BufferResponseFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ok_button"
            android:layout_marginBottom="@dimen/dp25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="Amount"
                    android:textSize="@dimen/dp25"
                    android:textStyle="bold" />

                    <Button
                        android:id="@+id/print_receipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp35"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:text="Receipt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp25" />

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp25"
                    android:layout_marginTop="@dimen/dp35"
                    android:text="Buffer Send" />

                <TextView
                    android:id="@+id/buffer_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp25"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/border"
                    android:padding="@dimen/dp10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp25"
                    android:layout_marginTop="@dimen/dp25"
                    android:text="Buffer Receive" />

                <WebView
                    android:id="@+id/buffer_receive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp25"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/border"
                    android:padding="@dimen/dp10" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/ok_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:layout_alignParentBottom="true"
            android:background="@color/blue"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="@dimen/dp35" />

    </RelativeLayout>
</layout>