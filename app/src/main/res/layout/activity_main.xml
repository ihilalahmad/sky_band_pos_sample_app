<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="Connection  Settings"
                    android:textSize="@dimen/sp20"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/type" />

                <Spinner
                    android:id="@+id/connection_type"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/connection_type"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/ip_address" />

                <EditText
                    android:id="@+id/ip_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:padding="@dimen/dp10"
                    android:hint="@string/ip_address"
                    android:background="@drawable/border"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/port" />

                <EditText
                    android:id="@+id/port_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:padding="@dimen/dp10"
                    android:hint="@string/port_no"
                    android:background="@drawable/border"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <Button
                        android:layout_width="@dimen/dp0"
                        android:layout_height="@dimen/dp35"
                        android:id="@+id/connect_button"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:layout_weight="50"
                        android:background="@color/blue"
                        android:text="Connect" />

                    <Button
                        android:id="@+id/disconnect_button"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:layout_weight="50"
                        android:background="#FFD300"
                        android:text="Disconnect" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/com_port" />

                <Spinner
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/com_port" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/baud_rate" />

                <Spinner
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/baud_rate" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp25"
                    android:layout_margin="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:background="@color/pink"
                    android:gravity="center"
                    android:text="@string/com_port_connections_completed" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection  Info"
                    android:textSize="@dimen/sp20"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/s_n" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:padding="@dimen/dp10"
                    android:hint="@string/s_n"
                    android:background="@drawable/border"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/ecr_ref" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:padding="@dimen/dp10"
                    android:hint="@string/ecr_ref"
                    android:background="@drawable/border"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/app_id" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:padding="@dimen/dp10"
                    android:hint="@string/app_id"
                    android:background="@drawable/border"
                    />

                <Button
                    android:id="@+id/get_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp35"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_gravity="center"
                    android:background="@color/blue"
                    android:layout_marginHorizontal="@dimen/dp80"
                    android:text="@string/get_info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/transaction"
                    android:textSize="@dimen/sp20"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/type" />

                <Spinner
                    style="@style/spinner_style"
                    android:id="@+id/transaction_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/pay_amt" />

                <EditText
                    android:id="@+id/pay_amt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:padding="@dimen/dp10"
                    android:hint="@string/pay_amt"
                    android:background="@drawable/border"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/cashback" />

                <EditText
                    android:id="@+id/cash_back_amt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:padding="@dimen/dp10"
                    android:hint="@string/cashback"
                    android:background="@drawable/border"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="@string/ecr_ref_no" />
                <EditText
                    android:id="@+id/ecr_ref_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:padding="@dimen/dp10"
                    android:hint="@string/ecr_ref_no"
                    android:background="@drawable/border"
                    />
                <CheckBox
                    android:id="@+id/check_box_print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:layout_above="@+id/button"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/response"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp20"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp35"
                    android:id="@+id/transaction_btn"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_gravity="center"
                    android:background="@color/blue"
                    android:layout_marginBottom="@dimen/dp50"
                    android:layout_marginHorizontal="@dimen/dp80"
                    android:text="Do Transaction" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

