<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="connectSetting"
            type="com.girmiti.skybandecr.fragment.connectsetting.ConnectSettingViewModel" />
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.connectsetting.ConnectSettingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp15"
                android:text="Connection  Settings"
                android:textSize="@dimen/sp20"
                android:textStyle="bold" />

            <Spinner
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp35"
                android:layout_marginTop="@dimen/dp50"
                android:entries="@array/connection_type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp35"
                android:layout_marginTop="@dimen/dp35"
                android:text="TCP/IP Settings"
                android:textSize="@dimen/sp20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp35"
                android:layout_marginTop="@dimen/dp25"
                android:text="@string/ip_address" />

            <EditText
                android:id="@+id/ip_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp35"
                android:layout_marginTop="@dimen/dp15"
                android:background="@drawable/border"
                android:hint="@string/ip_address"
                android:padding="@dimen/dp10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp35"
                android:layout_marginTop="@dimen/dp25"
                android:text="@string/port" />

            <EditText
                android:id="@+id/port_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp35"
                android:inputType="number"
                android:layout_marginTop="@dimen/dp15"
                android:background="@drawable/border"
                android:hint="@string/port_no"
                android:padding="@dimen/dp10" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/connect_button"
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp60"
                android:layout_weight="50"
                android:textSize="@dimen/dp15"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:text="Connect" />

            <Button
                android:id="@+id/disconnect_button"
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp60"
                android:textSize="@dimen/dp15"
                android:layout_weight="50"
                android:background="@color/white"
                android:textColor="@color/blue"
                android:text="Disconnect" />

        </LinearLayout>


    </RelativeLayout>

</layout>